{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Auth0": {
    "Domain": "dev-515sz13xlf4w85dh.au.auth0.com",
    "Audience": "https://ecotourism/api"
  },
  "SwaggerEndPoints": [
    {
      "Key": "v1",
      "Config": "/swagger/v1/swagger.json"
    }
  ],
  "ReverseProxy": {
    "Routes": {
      "user": {
        "ClusterId": "user_cluster",
        "Match": {
          "Path": "/user/{**catch-all}"
        }
      },
      "tourist": {
        "ClusterId": "tourist_cluster",
        "Match": {
          "Path": "/tourist/{**catch-all}"
        }
      },
      "accommodation": {
        "ClusterId": "accommodation_cluster",
        "Match": {
          "Path": "/accommodation/{**catch-all}"
        }
      },
      "weather": {
        "ClusterId": "weather_cluster",
        "Match": {
          "Path": "/weather/{**catch-all}"
        }
      },
      "outdoor": {
        "ClusterId": "outdoor_cluster",
        "Match": {
          "Path": "/outdoor/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "user_cluster": {
        "Destinations": {
          "user": {
            "Address": "http://user/"
          }
        }
      },
      "tourist_cluster": {
        "Destinations": {
          "tourist": {
            "Address": "http://tourist/"
          }
        }
      },
      "accommodation_cluster": {
        "Destinations": {
          "accommodation": {
            "Address": "http://accommodation/"
          }
        }
      },
      "weather_cluster": {
        "Destinations": {
          "weather": {
            "Address": "http://weather/"
          }
        }
      },
      "outdoor_cluster": {
        "Destinations": {
          "outdoor": {
            "Address": "http://outdoor/"
          }
        }
      }
    }
  }
}
